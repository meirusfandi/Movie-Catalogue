<FrameLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#09C"    android:padding="@dimen/widget_margin">    <LinearLayout        android:weightSum="10"        android:orientation="vertical"        android:layout_width="match_parent"        android:layout_height="match_parent">        <StackView            xmlns:android="http://schemas.android.com/apk/res/android"            android:id="@+id/stackView"            android:loopViews="true"            android:layout_weight="9"            android:layout_width="match_parent"            android:layout_height="wrap_content"/>        <TextView            xmlns:android="http://schemas.android.com/apk/res/android"            android:id="@+id/banner_text"            android:textAlignment="center"            android:layout_gravity="center"            android:background="@color/colorPrimaryDark"            android:textColor="#ffffff"            android:textStyle="bold"            android:gravity="center"            android:text="@string/favorite_movie"            android:textSize="20sp"            android:layout_weight="1"            android:layout_width="match_parent"            android:layout_height="wrap_content" />    </LinearLayout>    <TextView        xmlns:android="http://schemas.android.com/apk/res/android"        android:id="@+id/empty_view"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:textAlignment="center"        android:layout_gravity="center"        android:gravity="center"        android:background="@color/colorAccent"        android:textColor="#ffffff"        android:textStyle="bold"        android:text="@string/empty_movie_favorite"        android:textSize="20sp"        android:visibility="gone"/></FrameLayout>